<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.panel">
            <block class="Magento\Cms\Block\Block" name="header_top_panel">
                <arguments>
                    <argument name="block_id" xsi:type="string">header_top_panel</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="need_help" after="header_top_panel">
                <arguments>
                    <argument name="block_id" xsi:type="string">need_help</argument>
                </arguments>
            </block>
            <block class="Magento\Store\Block\Switcher" name="store_language" as="store_language" template="Magento_Store::switch/languages.phtml" />
        </referenceContainer>

        <referenceContainer name="header-wrapper">
            <block class="Magento\Theme\Block\Html\Header\Logo" name="logo">
                <arguments>
                    <argument name="logo_img_width" xsi:type="number">30</argument>
                    <argument name="logo_img_height" xsi:type="number">30</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\Navigation" name="top.links" htmlClass="panel header ">
                <arguments>
                    <argument name="css_class" xsi:type="string">header links</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceBlock name="my-account-link" remove="true"/>
        <referenceBlock name="register-link" remove="true"/>
        <referenceBlock name="header" remove="true"/>
    </body>
</page>
